<% revision = post.active_revision %>
<section>    
  <div class="span3">
    <header class="revision-header">
      <a href="<%= revision.full_url %>" title="<%= revision.title %>"><div class="post-image_<%= revision.id %> main-post-image"></div></a>      
	  <h2><%= link_to revision.title, revision.full_url, :title => revision.title %></h2>
	</header>  	
    <div id="post-content_<%= revision.id %>" class="content post-content" data-monologue="content">
      <%= truncate_html(revision.content, :length => 400, :omission => '...') %>
    </div>
    <footer class="revision-footer">
	  <div class="posted">
	    <span data-monologue="time">
	      <time datetime="<%= revision.published_at %>">
	        <%= I18n.localize(revision.published_at.to_date, :format => :long) %>
	      </time>
	    </span>
	    <span data-monologue="user">
	      <%= t(:by) + ' ' + revision.user.name %>
	    </span>
	    <span data-monologue="disqus">
	      <a href="<%= revision.full_url + "#disqus_thread" %>"></a>
	    </span>
	  </div>
	</footer>
	<hr />
	<script type="text/javascript">
	  (function($){
    	$('#post-content_<%= revision.id %> img:first').clone().appendTo(".post-image_<%= revision.id %>");
    	$('#post-content_<%= revision.id %> img:first').parent().parent().remove();
    	$('#post-content_<%= revision.id %> img:first').parent().remove();
      })(jQuery);
	</script>	
  </div>
</section>
